{
  "compilerOptions": {
    "target": "es2015",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "inlineSourceMap": true,
    "noEmitOnError": false,
    "inlineSources": true
  },
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "src/**/*.test.ts"
  ],
  "compileOnSave": true
}